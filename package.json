{
  "name": "kayanhr-website",
  "version": "1.1.0",
  "description": "Apostrophe 3 Boilerplate Site",
  "main": "app.js",
  "scripts": {
    "start": "node app",
    "dev": "nodemon",
    "build": "NODE_ENV=production node app @apostrophecms/asset:build",
    "serve": "NODE_ENV=production node app",
    "release": "yarn install && yarn run build && node app @apostrophecms/migration:migrate",
    "prepare": "husky install",
    "postinstall": "patch-package",
    "build-tailwind": "tailwindcss build public/style/site.css -o public/dist/output.css"
  },
  "nodemonConfig": {
    "delay": 1000,
    "verbose": true,
    "watch": [
      "./app.js",
      "./modules/**/*",
      "./lib/**/*.js",
      "./views/**/*.html"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "**/ui/apos/",
      "**/ui/src/",
      "**ui/public/",
      "locales/*.json",
      "public/uploads/",
      "public/apos-frontend/*.js",
      "data/"
    ],
    "ext": "json, js, html, scss, vue"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apostrophecms/kayanhr-website"
  },
  "author": "Apostrophe Technologies, Inc.",
  "license": "MIT",
  "dependencies": {
    "@apostrophecms/blog": "^1.0.4",
    "@apostrophecms/form": "^1.0.0",
    "@apostrophecms/open-graph": "^1.2.0",
    "@apostrophecms/redirect": "^1.3.0",
    "@apostrophecms/seo": "^1.2.1",
    "@apostrophecms/sitemap": "^1.0.2",
    "apostrophe": "^3.38.1",
    "counterup2": "^2.0.2",
    "eslint-config-prettier": "^8.5.0",
    "js-cookie": "^3.0.5",
    "normalize.css": "^8.0.1",
    "notiflix": "^3.2.5",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prosemirror-commands": "^1.5.0",
    "prosemirror-dropcursor": "^1.6.1",
    "prosemirror-gapcursor": "^1.3.1",
    "prosemirror-history": "^1.3.0",
    "prosemirror-keymap": "^1.2.0",
    "prosemirror-schema-list": "^1.2.2",
    "simplebar": "^5.3.8",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "eslint": "^7.16.0",
    "eslint-config-apostrophe": "^3.4.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.7",
    "prettier": "2.6.2",
    "tailwindcss-dir": "^4.0.0"
  },
  "lint-staged": {
    "**/!(*.min).*": "prettier --write --ignore-unknown"
  }
}
